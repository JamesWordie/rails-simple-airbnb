<%= simple_form_for(flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs p-2">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :number_of_guests, collection: 1..10 %>
    <%= f.input :price_per_night %>
  </div>

  <div class="form-actions mt-2 btn btn-primary">
    <%= f.button :submit %>
  </div>
<% end %>
